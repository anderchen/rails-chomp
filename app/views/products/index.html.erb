<div class="container" id="product-index">
  <h1>Product List</h1>
  <%= button_to 'Add a new product', new_product_path, class: 'btn btn-primary', method: :get %>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= render 'shared/product_image_path', product: product%>);  background-size: 100% 100%;">
          <div class="card-category"><%= product.category %></div>
          <div class="card-description">
            <h2><%= product.name %></h2>
          </div>
          <%= link_to product.name, product_path(product), class: "card-link" %>
        </div>
      </div>
    <% end  %>
  </div>
  <%= will_paginate @products %>
</div>
