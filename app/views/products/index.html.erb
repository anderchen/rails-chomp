<div data-aos="fade-in" class="productindex">
  <div class="container" id="product-index">
    <div class="row">
      <div class="col-xs-12 col-sm-10 productscard">
        <h1>Lista de Produtos</h1>
        <% @products.each do |product| %>
        <div class="col-xs-12 col-sm-4 animated fadeIn slow">
          <div data-aos="fade-in" class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= render 'shared/product_image_path', product: product%>);  background-size: 100% 100%;">
            <div class="card-category"><%= product.category %></div>
            <div class="card-description">
              <h2><%= product.name %></h2>
            </div>
            <%= link_to product.name, product_path(product), class: "card-link" %>
          </div>
        </div>
        <% end  %>
        <%= will_paginate @products %>
      </div>
    </div>
  </div>
</div>
