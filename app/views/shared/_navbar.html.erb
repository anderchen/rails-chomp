<div class="navbar-wagon">
  <!-- Logo -->
  <%#= link_to root_path, class: "navbar-wagon-brand" do %>
  <%#= image_tag "logo.png", height: 50 %>
  <%# end %>
  <!-- <a href="http://localhost:3000/" class="logo"><%#= image_tag("logo.png", :alt => "Chomp logo", height: '50') %></a> -->

  <%= link_to root_path, class: 'logo' do  %>
    <%= image_tag("logo.png", :alt => "Chomp logo", height: '50') %>
  <% end %>



  <!-- Right Navigation -->
  <div class="navbar-wagon-right">
    <% if user_signed_in? %>

    <!-- Links when logged in -->
    <!-- Alergies -->
      <div class="navbar-wagon-item hidden-xs hidden-sm">
        <div class="dropdown">
          <i class="fas fa-utensils dropdown-toggle fa-2x foodbutton" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
              <%= t(".nb", default: "Amendoim") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
              <%= t(".nb", default: "Leite") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
              <%= t(".nb", default: "Ovo") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
              <%= t(".nb", default: "Trigo") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
              <%= t(".nb", default: "Soja") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
              <%= t(".nb", default: "Peixe") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
              <%= t(".nb", default: "Crustáceo") %>
              <% end %>
            </li>
          </ul>
        </div>

      </div>
      <div class="navbar-cards text-center align-items-center search-box-collpase hidden-xs hidden-sm">
        <%= form_tag products_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "search-text",
          placeholder: "Quero procurar..." %>
          <a class="search-btn">
            <i class="fa fa-search fa-lg search-icon"></i>
          </a>
        <% end %>
        </div>
        <div class="navbar-cards text-center align-items-center hidden-xs hidden-sm">
          <%= link_to t(".new_product", default: "Sugerir um produto"), new_product_path, class: "navbar-wagon-item navbar-wagon-link text-center align-items-center navbutton" %>
        </div>
        <%#= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link navbar-cards" %>

        <!-- Avatar with dropdown menu -->
        <div class="navbar-wagon-item hidden-xs hidden-sm">
          <div class="dropdown">
            <%= render 'shared/avatar', user: current_user %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Perfil") %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-cog"></i>  <%= t(".settings", default: "Configurações") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Sair") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
          <!-- Dropdown list appearing on mobile only -->
        <div class="navbar-wagon-item hidden-md hidden-lg">
          <div class="dropdown">
            <i class="fa fa-bars dropdown-toggle fa-2x" data-toggle="dropdown"></i>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Perfil") %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-cog"></i>  <%= t(".settings", default: "Configurações") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Sair") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>

      <% else %>
      <!-- Login link (when logged out) -->
        <div class="navbar-cards">
          <%= link_to t(".sign_in", default: "LOGIN"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link text-center align-items-center navbutton" %>
        </div>
      <% end %>
    </div>
  </div>
