<div class="container">
  <%= simple_form_for @diet do |f| %>
    <%= f.error_notification %>
    <% if @diet.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @diet.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
